<main class="flex flex-col items-center w-full">
<h1>Welcome, <%= extract_username_from_email(current_user.email) %>!</h1>

<h2>Your Posts</h2>
<div class="w-3/4 flex flex-wrap justify-between">
  <% @posts.each do |post| %>
    <div class="blog-post w-2/5 border border-black rounded mx-3 my-2 flex flex-col items-center justify-center">
    <h2><%= post.subject %></h2>
    <p><%= post.contents %></p>
    <p>Posted by: <%= extract_username_from_email(post.user.email) %></p>
    <p>Upvotes: <%= post.upvote_count %></p>
    <%= link_to 'Edit', edit_post_path(post), method: :patch %>
    <%= form_for post, url: post_path(post), method: :delete, id:"delete_post", data: { confirm: "Are you sure you want to delete this post?" } do |f| %>
      <%= f.submit "Delete Post", class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this post?" } %>
     </div>
    <% end %>
    <% end %>
    </div>
</main>
</body>
</html>

