<main class="flex flex-col items-center w-full">
<h1 class="text-xl my-4 p-1 border border-gray-100 rounded w-2/5">Welcome, <%= extract_username_from_email(current_user.email) %>!</h1>

<h2>Here are your posts:</h2>
<div class="w-3/4 flex flex-wrap justify-between">
  <% @posts.each do |post| %>
    <div class="blog-post w-2/5 border border-gray-100 rounded flex flex-col items-center p-4 my-4">
      <div class="field flex flex-col w-3/5 items-start">
        <h2 class="p-1 border-b border-gray-100">Title:</h2>
        <p class="w-full border rounded p-1">
          <%= post.subject %>
        </p>
      </div>
      <div class="field flex flex-col w-3/5 items-start">
      <h2 class="p-1 border-b border-gray-100">Contents:</h2>
      <p class="w-full border rounded p-1">
        <%= post.contents %>
      </p>
      </div>
      <div class="field flex flex-row w-full px-4 items-center">
      <div class="field flex flex-row w-full items-center justify-center">
       <h2 class="p-1 border-b border-gray-100">Posted by:</h2>
         <%= extract_username_from_email(post.user.email) %>
     </div>
     <div class="flex flex-row w-full items-center justify-center">
     <div class='upvote-button my-2 p-1 border-b border-gray-100 w-2/5 flex flex-row items-center justify-center'>
       <%= image_tag "clapping.png", class: "w-2/5" %>
       <p class="mt-1"><%= post.upvote_count %></p>
     </div>     
     </div>
   </div>
        <%= link_to 'Edit', edit_post_path(post), method: :patch, class:"px-4 py-2 w-2/5 cursor-pointer text-white bg-blue-500 hover:bg-blue-700 rounded p-1 my-4" %>
        <%= form_for post, url: post_path(post), method: :delete, id:"delete_post", data: { confirm: "Are you sure you want to delete this post?" } do |f| %>
        <%= f.submit "Delete Post", class: "cursor-pointer", data: {turbo_confirm: "Are you sure you want to delete this post?" }, class: "px-4 py-2 text-white bg-orange-500 hover:bg-orange-700  rounded" %>
     </div>
    <% end %>
    <% end %>
    </div>
</main>
</body>
</html>

