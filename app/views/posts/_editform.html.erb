<main class="w-4/5 flex flex-col items-center">
<h1 class="text-xl sm:text-2xl lg:text-4xl w-full border border-gray-100 rounded p-1 my-4">Edit Post:</h1>
<form class="w-full lg:w-2/5 border border-gray-100 rounded flex flex-col items-center p-4 my-4 sm:text-base text-sm" method="patch" action="<%= post_path(@post) %>" enctype="multipart/form-data">
  <%= form_with(model: @post, local: true) do |form| %>

    <div class="field flex flex-col w-4/5 lg:w-3/5 items-start my-1">
      <%= form.label :subject, "Topic:" %>
      <%= form.text_field :subject, id: "post_subject", name: "post[subject]", class: "w-full border rounded p-1"%>
    </div>

    <div class="ield flex flex-col w-4/5 lg:w-3/5 items-start my-1">
      <%= form.label :contents, "Description:" %>
      <%= form.text_area :contents, id: "post_contents", name: "post[contents]", class: "w-full border rounded p-1" %>
    </div>

    <div class="actions w-3/5 md:w-2/5 items-start py-2 my-1">
      <%= form.submit "Submit", class:"w-full cursor-pointer text-white bg-blue-500 hover:bg-blue-700 rounded p-1"%>
    </div>
    <% end %>
    </form>
</main>
